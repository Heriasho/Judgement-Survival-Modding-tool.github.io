
/*General flow of the enemy class*/

enemies.base.<base>.<name of property> = <value>

enemies.entity.<enemyName>.<nameOfProperty> = <value>

/...........*Follow the flow below................*/

enemies
/*Basic base and generic base*/
    .base
        .default
            .properties
                .attackhitsound
                    [string]
                .attackmisssound
                    [string]
                .attacksound
                    [string]
                .difficultyval
                    [int]
                .walkanimationspeed
                    [double]
                .vision
                    [int]
                .attackanimation
                    [string]
        .alterativeBase
            .parents
                [list of parent types] /*enemies.base.meleeattack,enemies.base.human*/
            .class /*Humans use these*/
                [string]
            .survivortype 
                [list of survivortypes] /*male1, female1*/
            .tags
                [baseType] /*Human*/
                    [boolean]
            .properties  /*enemies.base.floating.properties.floating*/
                [Name of alterativeBase]
                    [double]
            .name   /*enemies.base.survivor1.name=survivor1*/
                [name of alterativeBase]
            .icon   /*enemies.base.survivor1.icon=enemy_icon_survivor1*/
                [name of icon]

/*EG............................*/
        .human
            .class
                [string]
            .survivortype
                [list of strings]
            .tags
                .human
                    [boolean]
        .demon
            .tags
                .demon
                    [boolean]
        .ranged
            .parents
                [list of enemies.base.[strings of types that use this]]
            .properties
        .meleeattack
            .parents
                [list of enemies.base.[strings of types that use this]]
            .properties
                .attackmisssound
                    [string]
            .range
                [int]
        .humanmelee
            .parents
                [enemies.base.default]
        .humanranged
            .parents
                [enemies.base.default]
        .floating
            .properties
                .floating
                    [double]
        .survivor1
            .name
                [string of declared type]
            .icon
                [string]
/*...............................*/

    /*Generic entity*/
    .entity
        .[enemyName]
            .parents
                [declared types] /*enemies.base.[enemyName]*/
            .damage
                [double]
            .attackspeed
                [int]
            .range
                [int]
            .accuracy
                [int]
            .health
                [int]
            .evade
                [int]
            .defense
                [int]
            .walkspeed
                [double]
            .vision
                [int]
            .difficultyval
                [int]
            .mindifficulty
                [int]
            .maxdifficulty
                [int]
            .loot
                [lootName]
                    [int]
            .walkanimationspeed
                [double]
            .prefab
                [prefabName]
            .properties
                [propertyName]
                    [propertyPrefabName]
            .weapon
                [list of weapons] /*club,quarterstaff,baseballbat*/


/*............................................*/